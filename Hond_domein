package domein;

public class Hond {

	private String naam;
	private int leeftijd;
	private String ras;

	public Hond() {
		this.naam = "Onbekend";
        this.ras = "Onbekend";
        this.leeftijd = 0;

	}

	public Hond(String naam, int leeftijd, String ras) {
		this.setNaam(naam);
        this.setLeeftijd(leeftijd);
        this.setRas(ras);


	}

	public boolean isPuppy() {
		if (leeftijd <1){
            return true;
        }else{
            return false;
        }

	}

    public String getNaam() {
        return naam;
    }

    public int getLeeftijd() {
        return leeftijd;
    }

    public String getRas() {
        return ras;
    }

    public void setNaam(String naam) {
        this.naam = naam;
    }

    public void setLeeftijd(int leeftijd) {
        if (leeftijd <0){
            this.leeftijd = 0;
        }else{
            this.leeftijd = leeftijd;
        }


    }

    public void setRas(String ras) {
        this.ras = ras;
    }
}
