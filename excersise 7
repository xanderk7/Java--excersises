package Oefening_array;

import java.util.Scanner;

public class Oefening7 {
    public static void main(String[] args) {
        Scanner invoer = new Scanner(System.in);
        int[] getallen = new int[5];
        new Oefening7().maakOefening7(getallen, invoer);






    }
    private void maakOefening7(int[] getallen, Scanner invoer){
        for (int i = 0;i<5;i++){
            System.out.println("Geef een willekeurig getal in: ");
            getallen[i] = invoer.nextInt();
           

        }
        System.out.println("\nDe ingevoerde getallen zijn:");
        for (int i = 0; i < getallen.length; i++) {
            System.out.println(getallen[i]);
        }
        int som =0;
        for (int i = 0; i < getallen.length;i++){
            som += getallen[i];
        }
        int gemiddelde = 0;
        gemiddelde = som/ getallen.length;


        System.out.printf("De som van de getallen is: "+ som);
        System.out.printf("Het gemiddelde van de getallen is: "+ gemiddelde);

    }
}
